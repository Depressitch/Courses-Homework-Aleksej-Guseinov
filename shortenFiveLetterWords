using System;

public class Program
{
	public static void Main()
	{
		Console.Write("Input your line: ");
		string input = Console.ReadLine();
		SwapWords(input);
		Console.ReadKey();
	}
	static void SwapWords(string text)
	{
		for (int i = 0; i < text.Length; i++)
		{
			int wordLength = 0; //переменная для записи длины слова
			const int delLetters = 5; //константа, которая определяет какой длины должно быть слова чтобы его укоротить
			//проверяем сначала j < text.Length чтобы не выйти за пределы строки
			for (int j = i; j < text.Length && char.IsLetter(text, j); j++) 
			{
				wordLength++;
			}
			if (wordLength > delLetters) 
			{
			//если длина слова больше delLetters, то удаляем элементы строки начиная с (начало слова+delLetters) и вставляем в конец слова "..."
				text = text.Remove(i + delLetters, wordLength - delLetters);
				text = text.Insert(i + delLetters, "...");
				i += delLetters + 3; //после сдвигаем i на delLetters + 3 символа вперёд чтобы не проходить по числу+троеточию заново
			} 
			else
			{
				i += wordLength; // если длина слова меньше или равна 5, то начинаем сдвигаем i на кол-во букв и переходим к следующему слову
			}
		}
		Console.WriteLine(text);
	}
}
